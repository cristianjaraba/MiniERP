<Window x:Class="MiniERP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniERP"
        mc:Ignorable="d"
        Title="MiniERP" Height="450" Width="800">
    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Label x:Name="lblPersonen" Width="300" FontWeight="Bold" FontSize="16" Content="Personen"/>
                <ComboBox x:Name="cbPersonen" Width="300" Margin="10" SelectionChanged="selectedItem_Changed" />

                <StackPanel Orientation="Vertical" DataContext="{Binding SelectedItem, ElementName=cbPersonen}">
                    <DockPanel Width="300">
                        <Label x:Name="lblVorname" DockPanel.Dock="Left" Width="100" Height="30" Content="Vorname:"/>
                        <TextBox Name="tbVorname" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding vorname}" />
                    </DockPanel>
                    <DockPanel Width="300">
                        <Label x:Name="lblNachname" DockPanel.Dock="Left" Width="100" Height="30" Content="Nachname:"/>
                        <TextBox Name="tbNachname" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding nachname}" />
                    </DockPanel>
                    <DockPanel Width="300">
                        <Label x:Name="lblStrasse" DockPanel.Dock="Left" Width="100" Height="30" Content="Straße:"/>
                        <TextBox Name="tbStrasse" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding strasse}" />
                    </DockPanel>
                    <DockPanel Width="300">
                        <Label x:Name="lblHausnummer" DockPanel.Dock="Left" Width="100" Height="30" Content="Hausnummer:"/>
                        <TextBox Name="tbHausnummer" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding hausnummer}" />
                    </DockPanel>
                    <DockPanel Width="300">
                        <Label x:Name="lblOrt" DockPanel.Dock="Left" Width="100" Height="30" Content="Ort:"/>
                        <TextBox Name="tbOrt" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding ort}" />
                    </DockPanel>
                    <DockPanel Width="300">
                        <Label x:Name="lblTelefonnummer" DockPanel.Dock="Left" Width="100" Height="30" Content="Telefonnummer:"/>
                        <TextBox Name="tbTelefonnummer" DockPanel.Dock="Right" Width="200" Height="30" Text="{Binding telefon}" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label x:Name="lblBestellungen" Width="300" FontWeight="Bold" FontSize="16" Content="Liste der Bestellungen"/>
                <ListBox x:Name="lbBestellungen" Margin="10" Width="300" Height="220">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock  Text="{Binding name}" FontWeight="bold" Width="85"/>
                                <TextBlock  Text="{Binding beschreibung}" FontWeight="Thin" Width="90"/>
                                <TextBlock/>
                                <TextBlock Width="85">
                                    <Run Text="Menge:" FontWeight="Thin" TextDecorations="Underline" />
                                    <Run Text="  " />
                                    <Run Text="{Binding menge}" FontWeight="bold"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <DockPanel Grid.Column="0" Grid.Row="1" LastChildFill="False" Margin="20, 0, 0, 0">
                <Button x:Name="btnLieferanten" DockPanel.Dock="Left" Content="Zeige Lieferanten" Width="100" Height="30" Click="btnLieferanten_Click"/>
                <Button x:Name="btnArtikel" DockPanel.Dock="Right" Content="Artikel anzeigen" Width="100" Height="30" Click="btnArtikel_Click"/>
            </DockPanel>
            <DockPanel Grid.Column="1" Grid.Row="1" LastChildFill="False" Margin="0, 0, 20, 0">
                <Button x:Name="btnBeenden" DockPanel.Dock="Right" Content="Beenden" Width="100" Height="30" Click="btnBeenden_Click"/>
            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
